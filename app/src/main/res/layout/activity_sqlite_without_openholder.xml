<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".SqliteWithoutOpenholder">

    <AutoCompleteTextView
        android:id="@+id/ename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name" />

    <EditText
        android:id="@+id/edesignation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/ename"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:hint="Designation" />

    <EditText
        android:id="@+id/econt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/edesignation"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:hint="contact no" />

    <EditText
        android:id="@+id/ecity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/econt"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:hint="city" />

    <EditText
        android:id="@+id/earea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/ecity"
        android:inputType="textPersonName"
        android:layout_marginTop="10dp"
        android:hint="area" />

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/earea"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:text="Add" />

    <Button
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/add"
        android:layout_alignBaseline="@+id/add"
        android:layout_marginLeft="15dp"
        android:text="Show" />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/show"
        android:layout_alignBaseline="@+id/add"
        android:layout_marginLeft="15dp"
        android:text="Update" />

    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/update"
        android:layout_alignBaseline="@+id/add"
        android:layout_marginLeft="15dp"
        android:text="Delete" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add"
        android:layout_centerInParent="true"
        android:text="Reset" />
</RelativeLayout>